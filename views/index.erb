<!doctype html>
<html>
<head>
  <title>Protextination</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="/css/tailwind.css" rel="stylesheet">
  <script src="https://unpkg.com/vue@3.2.20/dist/vue.global.prod.js"></script>
</head>
<body>

<!-- ui based on https://tailwindui.com/ -->

<div class="relative py-3 md:py-16 lg:py-16 bg-white" id="app">
  <div class="hidden absolute top-0 inset-x-0 h-1/2 bg-gray-50 lg:block" aria-hidden="true"></div>
  <div class="max-w-7xl mx-auto bg-indigo-600 lg:bg-transparent lg:px-8">
    <div class="lg:grid lg:grid-cols-12">

      <div class="relative z-10 lg:col-start-9 lg:row-start-1 lg:col-span-4 lg:py-16 lg:bg-transparent">
        <div class="absolute inset-x-0 h-1/2 bg-gray-50 lg:hidden" aria-hidden="true"></div>
        <div class="max-w-md mx-auto px-4 sm:max-w-3xl sm:px-6 lg:max-w-none lg:p-0">
          <div class="aspect-w-1 aspect-h-1 sm:aspect-w-2 sm:aspect-h-1 lg:aspect-w-1">
            <a :href="imageSrc().url" target="_blank" title="open on unsplash.com"><img class="object-cover object-center rounded-3xl shadow-2xl" :src="imageSrc().src" alt=""></a>
          </div>
        </div>
      </div>

      <div class="relative bg-indigo-600 lg:col-start-2 lg:row-start-1 lg:col-span-10 lg:rounded-3xl lg:grid lg:grid-cols-10 lg:items-center">
         <div class="hidden absolute inset-0 overflow-hidden rounded-3xl lg:block" aria-hidden="true">
          <svg class="absolute bottom-full left-full transform translate-y-1/3 -translate-x-2/3 xl:bottom-auto xl:top-0 xl:translate-y-0" width="404" height="384" fill="none" viewBox="0 0 404 384" aria-hidden="true">
            <defs>
              <pattern id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <rect x="0" y="0" width="4" height="4" class="text-indigo-500" fill="currentColor" />
              </pattern>
            </defs>
            <rect width="404" height="384" fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)" />
          </svg>
          <svg class="absolute top-full transform -translate-y-1/3 -translate-x-1/3 xl:-translate-y-1/2" width="404" height="384" fill="none" viewBox="0 0 404 384" aria-hidden="true">
            <defs>
              <pattern id="64e643ad-2176-4f86-b3d7-f2c5da3b6a6d" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                <rect x="0" y="0" width="4" height="4" class="text-indigo-500" fill="currentColor" />
              </pattern>
            </defs>
            <rect width="404" height="384" fill="url(#64e643ad-2176-4f86-b3d7-f2c5da3b6a6d)" />
          </svg>
        </div>
        <div class="relative max-w-md mx-auto py-12 px-4 space-y-6 sm:max-w-3xl sm:py-16 sm:px-6 lg:max-w-none lg:p-0 lg:col-start-1 lg:col-span-7">
          <h2 class="text-3xl font-extrabold text-white" id="join-heading">Pro<span class="text-indigo-200">text</span>ination</h2>
          <p class="text-lg">
            <textarea ref="textarea" v-model="content" cols="60" rows="5" placeholder="Type text and you will see next image and so on.." class="max-w-lg shadow-sm block w-full focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm border border-gray-300 rounded-md"></textarea>
          </p>
        </div>
      </div>


    </div>
  </div>
</div>


<footer class="bg-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 md:flex md:items-center md:justify-between lg:px-8">
    <div class="flex justify-center space-x-6 md:order-2">

      <a href="https://github.com/nemilya/protextination/" target="_blank" title="Open source code." class="text-gray-400 hover:text-gray-500">
        <span class="sr-only">GitHub</span>
        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
      </a>

    </div>
    <div class="mt-8 md:mt-0 md:order-1">
      <p class="text-center text-sm text-gray-400">
        2021 Protextination.com | powered by <a href="https://unsplash.com" target="_blank">Unsplash.com</a>
      </p>
    </div>
  </div>
</footer>


<script type="text/javascript">
const App = {
  data() {
    return {
      content: '',
      images: <%= @images.to_json %>
    }
  },
  mounted() {
    this.$refs.textarea.focus();
  },
  methods: {
    charsCount(){
      return this.content.length;
    },
    position(){
      return Math.floor(this.charsCount() / 70);
    },
    imageSrc(){
      return this.images[this.position()];
    }
  }
}

Vue.createApp(App).mount('#app')
</script> 

</body>
</html>
